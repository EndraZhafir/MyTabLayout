<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomepageFragment">

    <!-- ConstraintLayout di atas untuk background biru (menutupi area status bar) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_blue_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue"
        android:fitsSystemWindows="true">
        
        <!-- Bisa ditambah content di sini kalau perlu -->
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LinearLayout di bawah untuk konten utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textColor="#1F2937"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Welcome Animation/Image Placeholder -->
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/okcomputer"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</LinearLayout>